{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "shared/*": ["shared/*"],
      "pages/*": ["pages/*"],
      "entities/*": ["entities/*"],
      "features/*": ["features/*"],
      "widgets/*": ["widgets/*"],
      "@/*": ["*"]
     },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "webpack.config.ts"],
  "ts-node": {
    "compilerOptions": { 
      "module": "CommonJS",
    }
  }
}